<resources>

    <style name="BaseParameterEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
        <item name="android:ellipsize">start</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ParameterEditText" parent="BaseParameterEditText">
        <item name="android:inputType">numberDecimal</item>
        <item name="android:maxLength">6</item>
    </style>

    <style name="AlphaParameterEditText" parent="BaseParameterEditText">
        <item name="android:inputType">numberDecimal|numberSigned</item>
        <item name="android:maxLength">8</item>
    </style>

</resources>
